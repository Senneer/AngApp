body
  margin 0
  padding 0

main
  box-sizing border-box
  padding 25px

.filter
  width 100%
  max-width 500px
  margin-bottom 20px
  
  &__row
    display grid
    grid-template-columns 1fr 2fr 2fr
    grid-template-rows 30px
    grid-gap 20px
    align-items: center;
    &:not(:last-child)
      margin-bottom 20px
      
    select
      height 100%
      outline none
      
    button
      display block
      cursor pointer
      outline none

.people
  width: 100%
  max-width 500px
  border-collapse collapse

  thead
    background #bbbbbb
    
    th,
    td
      border 1px solid #000000

    button
      box-sizing border-box
      display block
      width 100%
      height 100%
      padding 10px 3px
      text-align left
      background none
      border none
      cursor pointer
      outline none

      &::after
        content ''
        display inline-block
        vertical-align middle
        margin-left 5px
        border-right 4px solid transparent
        border-left 4px solid transparent
      &._top::after
        border-top 4px solid #000000
      &._bottom::after
        border-bottom 4px solid #000000

  tbody
    td
      padding: 10px 3px
      border 1px solid #000000